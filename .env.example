u# SingleStore Connection
SINGLESTORE_HOST=your-workspace.singlestore.com
SINGLESTORE_PORT=3306
SINGLESTORE_USER=admin
SINGLESTORE_PASSWORD=your-password
SINGLESTORE_DATABASE=hackernews_semantic

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_STORIES=hn-stories
KAFKA_TOPIC_COMMENTS=hn-comments

# Hacker News Fetcher Configuration
HN_FETCH_INTERVAL_SECONDS=30
HN_MAX_STORIES_PER_FETCH=50
HN_MAX_COMMENTS_PER_STORY=50
HN_ENABLE_STORIES=true
HN_ENABLE_COMMENTS=true

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=true

# Embedding Configuration (optional - uses defaults if not specified)
# EMBED_MODEL=openai-text-embed-large
EMBED_TITLE_ONLY=false

# Logging
LOG_LEVEL=INFO
