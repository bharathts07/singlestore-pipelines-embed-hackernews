# SingleStore Connection (Required)
SINGLESTORE_HOST=your-workspace.singlestore.com
SINGLESTORE_PORT=3306
SINGLESTORE_USER=admin
SINGLESTORE_PASSWORD=your-password
SINGLESTORE_DATABASE=hackernews_semantic

# Hacker News Fetcher Configuration (Optional - defaults shown)
HN_FETCH_INTERVAL_SECONDS=30
HN_MAX_STORIES_PER_FETCH=50
HN_MAX_COMMENTS_PER_STORY=50
HN_ENABLE_STORIES=true
HN_ENABLE_COMMENTS=true

# Dashboard Configuration (Optional - defaults shown)
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=true

# Logging (Optional)
LOG_LEVEL=INFO
